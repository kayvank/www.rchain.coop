                <p>$ echo "export RNODE_DIR=$PWD/rnode" >> ~/.bash_profile</p>
                <p>$ echo "export PATH=\$RNODE_DIR/bin:\$PATH" >> ~/.bash_profile</p>
                <p>$ source ~/.bash_profile</p>
            </div>
